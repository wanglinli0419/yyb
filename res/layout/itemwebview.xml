<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#222222" >

        <ImageView
            android:id="@+id/iv_web_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/tenpay_push_down" />

        <ImageView
            android:id="@+id/web_xiaoai"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_web_back"
            android:src="@drawable/applogo" />

        <TextView
            android:id="@+id/tv_menutitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/web_xiaoai"
            android:textColor="#f3f3f3"
            android:textSize="24sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/iv_love"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"
            android:src="@drawable/uncollect" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/share_light" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_web_title"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <WebView
        android:id="@+id/webview_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>